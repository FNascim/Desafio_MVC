@model Desafio_MVC.DTO.TecnologiaDTO
@{
    Layout = "_LayoutAdmin";
}
<h3>Nova Tecnologia</h3>
<hr>
<form class="form-horizontal" asp-controller="Tecnologias" asp-action="Salvar" method="POST">
<input type="hidden" asp-for="Id" value="0">
<label asp-for="Nome">Nome</label>
<input type="text" asp-for="Nome" class="form-control" placeholder="Nome da tecnologia"><br>
<span asp-validation-for="Nome"></span>
<button class="btn btn-success">Cadastrar</button>
</form>